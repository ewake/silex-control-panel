{% block modal %}
<div id="modal-confirm" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
    	<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close'|trans|e }}">
        	<span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Cancel'|trans }}</button>
        <button type="button" class="btn btn-primary">{{ 'OK'|trans }}</button>
      </div>
    </div>
  </div>
</div>
{% endblock modal %}